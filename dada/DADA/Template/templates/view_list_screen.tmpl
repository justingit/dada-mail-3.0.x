<!-- tmpl_if list_type_isa_black_list -->
	
	<h1>
	 Your Blacklist
	</h1>
	<p>
	 A blacklist is a set of rules that say who cannot subscribe to 
	 your list. You can disallow a single email address by adding that email 
	 address (you@yours.com) to the blacklist.
	</p>
	<p>
	 You can also use the blacklist to match a part of an email address. 
	 For example, adding '.com' to the blacklist will disallow 
	 anyone that has '.com' in their email address.
	</p>
		
	<!-- tmpl_if can_use_global_black_list --> 
		
		<!-- tmpl_if GLOBAL_BLACK_LIST -->
			
			<p class="positive">
			 * The Global Blacklist has been enabled.
			</p>
			
		<!--/tmpl_if-->
		
	<!--/tmpl_if-->
	
	<!-- tmpl_if can_use_global_unsubscribe --> 
		
		<!-- tmpl_if GLOBAL_UNSUBSCRIBE -->
			
			<p class="positive">
			 * Global Unsubscribe has been enabled.
			</p>
			
		<!--/tmpl_if-->
		
	<!--/tmpl_if-->
	
	<!-- tmpl_if black_list_changes_done -->
	
		<p class="positive">
		 Your changes to the blacklist settings were successful!
		</p>
		
	<!--/tmpl_if-->
	
<!--/tmpl_if-->

